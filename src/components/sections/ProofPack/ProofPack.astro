---
import "./proof-pack.css";
---

<section class="k-proofx section" id="proof" aria-label="Proof">
  <div class="container k-proofx__wrap">
    <!-- ===== ROW 1 (TOP) — NO TIMELINE ===== -->
    <div class="k-proofx__row k-proofx__row--hero">
      <div class="k-proofx__heroCopy">
        <div class="k-proofx__kicker">
          <span class="k-proofx__dot" aria-hidden="true"></span>
          <span>Project and long-term planning</span>
          <span class="k-proofx__chev" aria-hidden="true">›</span>
        </div>

        <h2 class="k-proofx__h2">From idea to launch — one line of sight.</h2>

        <p class="k-proofx__p">
          A single source of truth for the build. We plan, manage, and refine each step — so decisions stay light, scope stays sharp, and delivery stays steady.
        </p>
      </div>
    </div>

    <div class="k-proofx__hr" aria-hidden="true"></div>

    <!-- ===== ROW 2 ===== -->
    <div class="k-proofx__row k-proofx__row--split">
      <div class="k-proofx__half">
        <!-- ✅ UPDATED COPY (left column) -->
        <h3 class="k-proofx__h3">Progress updates — without the chaos</h3>
        <p class="k-proofx__p2">
          Short walkthrough videos paired with one shared doc for decisions and feedback. Clear next steps, calm delivery, zero scattered threads.
        </p>

        <div class="k-proofx__card k-proofx__card--overview" aria-hidden="true">
          <div class="k-proofx__cardTitle">Project Overview</div>

          <div class="k-proofx__kv">
            <div class="k-proofx__kvRow">
              <div class="k-proofx__kvKey">Properties</div>
              <div class="k-proofx__kvVal">
                <span class="k-proofx__pill">
                  <span class="k-proofx__ring" aria-hidden="true"></span>
                  In Progress
                </span>
                <span class="k-proofx__pill">
                  <span class="k-proofx__square" aria-hidden="true"></span>
                  ENG
                </span>
                <span class="k-proofx__avatars" aria-hidden="true">
                  <span class="k-proofx__av"></span>
                  <span class="k-proofx__av"></span>
                  <span class="k-proofx__av"></span>
                </span>
              </div>
            </div>

            <div class="k-proofx__kvRow">
              <div class="k-proofx__kvKey">Resources</div>
              <div class="k-proofx__kvVal">
                <span class="k-proofx__pill">
                  <span class="k-proofx__tinyIcon k-proofx__tinyIcon--grid" aria-hidden="true"></span>
                  Exploration
                </span>
                <span class="k-proofx__pill">
                  <span class="k-proofx__tinyIcon k-proofx__tinyIcon--tri" aria-hidden="true"></span>
                  User interviews
                </span>
              </div>
            </div>

            <div class="k-proofx__kvRow">
              <div class="k-proofx__kvKey">Milestones</div>
              <div class="k-proofx__kvVal k-proofx__kvVal--col">
                <div class="k-proofx__mile">
                  <span class="k-proofx__mDot k-proofx__mDot--blue" aria-hidden="true"></span>
                  <span>Design Review</span>
                  <span class="k-proofx__muted">100%</span>
                </div>
                <div class="k-proofx__mile">
                  <span class="k-proofx__mDot k-proofx__mDot--blue" aria-hidden="true"></span>
                  <span>Internal Alpha</span>
                  <span class="k-proofx__muted">100% of 10</span>
                </div>
                <div class="k-proofx__mile">
                  <span class="k-proofx__mDot k-proofx__mDot--amber" aria-hidden="true"></span>
                  <span>GA</span>
                  <span class="k-proofx__muted">25% of 53</span>
                </div>
              </div>
            </div>
          </div>

          <div class="k-proofx__cardGlow" aria-hidden="true"></div>
        </div>
      </div>

      <div class="k-proofx__vdiv" aria-hidden="true"></div>

      <div class="k-proofx__half">
        <h3 class="k-proofx__h3">Project updates</h3>
        <p class="k-proofx__p2">Communicate progress and project health with built-in project updates.</p>

        <div class="k-proofx__stack" aria-hidden="true">
          <div class="k-proofx__update k-proofx__update--back1">
            <div class="k-proofx__uLine"></div><div class="k-proofx__uLine"></div><div class="k-proofx__uLine"></div>
          </div>

          <div class="k-proofx__update k-proofx__update--back2">
            <div class="k-proofx__uLine"></div><div class="k-proofx__uLine"></div><div class="k-proofx__uLine"></div>
          </div>

          <div class="k-proofx__update k-proofx__update--front">
            <div class="k-proofx__uTop"><span class="k-proofx__uBadge">At risk</span></div>

            <div class="k-proofx__uStatus">
              <span class="k-proofx__check" aria-hidden="true">✓</span>
              <span class="k-proofx__green">On track</span>
            </div>

            <div class="k-proofx__uTitle">We are ready to launch next Thursday</div>
            <div class="k-proofx__uDate">Sep 8</div>
          </div>
        </div>
      </div>
    </div>

    <div class="k-proofx__hr" aria-hidden="true"></div>

    <!-- ===== ROW 3 ===== -->
    <div class="k-proofx__row k-proofx__row--doc">
      <div class="k-proofx__copy2">
        <h3 class="k-proofx__h3 k-proofx__h3--big">Collaboration, kept simple</h3>
        <p class="k-proofx__p2">
          One doc for scope, one place for feedback, one action list for changes — so nothing gets missed and delivery stays steady.
        </p>

        <div class="k-proofx__list" data-proofx-tabs role="tablist" aria-label="Collaboration artefacts">
          <button
            class="k-proofx__li k-proofx__liBtn is-active"
            type="button"
            role="tab"
            aria-selected="true"
            aria-controls="proofx-panel-doc"
            id="proofx-tab-doc"
            data-proofx-tab="doc"
          >
            <span class="k-proofx__liBar" aria-hidden="true"></span>
            <span>Scope &amp; milestones</span>
          </button>

          <button
            class="k-proofx__li k-proofx__liBtn"
            type="button"
            role="tab"
            aria-selected="false"
            aria-controls="proofx-panel-comments"
            id="proofx-tab-comments"
            data-proofx-tab="comments"
          >
            <span class="k-proofx__liBar" aria-hidden="true"></span>
            <span>Feedback threads</span>
          </button>

          <button
            class="k-proofx__li k-proofx__liBtn"
            type="button"
            role="tab"
            aria-selected="false"
            aria-controls="proofx-panel-commands"
            id="proofx-tab-commands"
            data-proofx-tab="commands"
          >
            <span class="k-proofx__liBar" aria-hidden="true"></span>
            <span>Decisions → changes</span>
          </button>
        </div>
      </div>

      <div class="k-proofx__visual k-proofx__visual--doc" data-proofx-panels>
        <!-- Panel 1: Documents -->
        <div
          class="k-proofx__panel is-active"
          id="proofx-panel-doc"
          role="tabpanel"
          aria-labelledby="proofx-tab-doc"
          tabindex="0"
          aria-hidden="false"
          data-proofx-panel="doc"
        >
          <div class="k-proofx__doc" aria-hidden="true">
            <div class="k-proofx__docTop">
              <span class="k-proofx__crumbDot" aria-hidden="true"></span>
              <span>Spice harvester</span>
              <span class="k-proofx__sep" aria-hidden="true">›</span>
              <span>Project specs</span>
              <span class="k-proofx__dots" aria-hidden="true">···</span>
            </div>

            <div class="k-proofx__docBody">
              <div class="k-proofx__docIcon" aria-hidden="true"></div>

              <div class="k-proofx__hl">
                <span class="k-proofx__tag k-proofx__tag--a">zoe</span>
                <span class="k-proofx__hlText">Collaborate on ideas</span>
              </div>

              <div class="k-proofx__docP">
                Write down product ideas and work together on feature specs in realtime, multiplayer project documents.
                Add <span class="k-proofx__mono">**style**</span> and <span class="k-proofx__mono">##structure</span> with
                rich-text formatting options.
                <span class="k-proofx__tag k-proofx__tag--b">quinn</span>
              </div>

              <div class="k-proofx__lines">
                <span></span><span></span><span></span><span></span><span></span>
                <span></span><span></span><span></span><span></span>
              </div>
            </div>

            <div class="k-proofx__docGlow" aria-hidden="true"></div>
          </div>
        </div>

        <!-- Panel 2: Inline comments -->
        <div
          class="k-proofx__panel"
          id="proofx-panel-comments"
          role="tabpanel"
          aria-labelledby="proofx-tab-comments"
          tabindex="-1"
          aria-hidden="true"
          data-proofx-panel="comments"
        >
          <div class="k-proofx__doc" aria-hidden="true">
            <div class="k-proofx__docTop">
              <span class="k-proofx__crumbDot" aria-hidden="true"></span>
              <span>Launch notes</span>
              <span class="k-proofx__sep" aria-hidden="true">›</span>
              <span>Feedback</span>
              <span class="k-proofx__dots" aria-hidden="true">···</span>
            </div>

            <div class="k-proofx__docBody">
              <div class="k-proofx__docIcon k-proofx__docIcon--comments" aria-hidden="true"></div>

              <div class="k-proofx__hl">
                <span class="k-proofx__tag k-proofx__tag--a">ava</span>
                <span class="k-proofx__hlText">Comment in context</span>
              </div>

              <div class="k-proofx__docP">
                Keep feedback anchored to the exact sentence — no screenshots, no guessing.
                Mention teammates with <span class="k-proofx__mono">@name</span>, resolve threads, and move on.
              </div>

              <div class="k-proofx__cRow" aria-hidden="true">
                <div class="k-proofx__cLine is-hot"></div>
                <div class="k-proofx__cLine"></div>
                <div class="k-proofx__cLine"></div>
              </div>

              <div class="k-proofx__comment" aria-hidden="true">
                <div class="k-proofx__commentTop">
                  <span class="k-proofx__miniAv"></span>
                  <span class="k-proofx__commentName">Ava</span>
                  <span class="k-proofx__commentTime">just now</span>
                </div>
                <div class="k-proofx__commentBody">Let’s tighten this line — make the value pop in 7 words.</div>
                <div class="k-proofx__commentMeta">
                  <span class="k-proofx__chip">Resolve</span>
                  <span class="k-proofx__chip">Reply</span>
                </div>
              </div>
            </div>

            <div class="k-proofx__docGlow" aria-hidden="true"></div>
          </div>
        </div>

        <!-- Panel 3: Text → issue commands -->
        <div
          class="k-proofx__panel"
          id="proofx-panel-commands"
          role="tabpanel"
          aria-labelledby="proofx-tab-commands"
          tabindex="-1"
          aria-hidden="true"
          data-proofx-panel="commands"
        >
          <div class="k-proofx__doc" aria-hidden="true">
            <div class="k-proofx__docTop">
              <span class="k-proofx__crumbDot" aria-hidden="true"></span>
              <span>Spec draft</span>
              <span class="k-proofx__sep" aria-hidden="true">›</span>
              <span>Actionables</span>
              <span class="k-proofx__dots" aria-hidden="true">···</span>
            </div>

            <div class="k-proofx__docBody">
              <div class="k-proofx__docIcon k-proofx__docIcon--cmd" aria-hidden="true"></div>

              <div class="k-proofx__hl">
                <span class="k-proofx__tag k-proofx__tag--a">kai</span>
                <span class="k-proofx__hlText">Turn text into tasks</span>
              </div>

              <div class="k-proofx__docP">
                Highlight a sentence, type a command, and you’ve got an issue — linked back to the source.
                No context lost, no copy-paste pain.
              </div>

              <div class="k-proofx__cmd" aria-hidden="true">
                <div class="k-proofx__cmdLine"><span class="k-proofx__cmdK">Selected:</span> “Add FAQ accordion + schema”</div>
                <div class="k-proofx__cmdLine"><span class="k-proofx__cmdK">Command:</span> <span class="k-proofx__mono">/issue</span> create</div>
                <div class="k-proofx__cmdPalette">
                  <span class="k-proofx__cmdPill">Create issue</span>
                  <span class="k-proofx__cmdPill">Assign</span>
                  <span class="k-proofx__cmdPill">Priority: High</span>
                </div>
              </div>

              <div class="k-proofx__issue" aria-hidden="true">
                <div class="k-proofx__issueTop">
                  <span class="k-proofx__issueDot"></span>
                  <span class="k-proofx__issueTitle">FAQ accordion + schema</span>
                  <span class="k-proofx__issueTag">P1</span>
                </div>
                <div class="k-proofx__issueSub">Linked to spec draft · created from selection</div>
              </div>
            </div>

            <div class="k-proofx__docGlow" aria-hidden="true"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="module">
    // ProofPack — Row 3 tabs (no framework, fast, keyboard-friendly)
    const root = document.querySelector('#proof');
    const list = root?.querySelector('.k-proofx__list[data-proofx-tabs]');
    const panelsRoot = root?.querySelector('[data-proofx-panels]');

    if (list && panelsRoot) {
      const tabs = Array.from(list.querySelectorAll('[data-proofx-tab]'));
      const panels = Array.from(panelsRoot.querySelectorAll('[data-proofx-panel]'));

      const setActive = (key) => {
        tabs.forEach((t) => {
          const on = t.getAttribute('data-proofx-tab') === key;
          t.classList.toggle('is-active', on);
          t.setAttribute('aria-selected', on ? 'true' : 'false');
          t.setAttribute('tabindex', on ? '0' : '-1');
        });

        panels.forEach((p) => {
          const on = p.getAttribute('data-proofx-panel') === key;
          p.classList.toggle('is-active', on);
          p.setAttribute('aria-hidden', on ? 'false' : 'true');
          p.setAttribute('tabindex', on ? '0' : '-1');
        });
      };

      tabs.forEach((t) =>
        t.addEventListener('click', () => setActive(t.getAttribute('data-proofx-tab')))
      );

      list.addEventListener('keydown', (e) => {
        const k = e.key;
        if (!['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'Home', 'End', 'Enter', ' '].includes(k)) return;

        const current = document.activeElement;
        const i = tabs.indexOf(current);
        if (i < 0) return;

        if (k === 'Enter' || k === ' ') {
          e.preventDefault();
          setActive(tabs[i].getAttribute('data-proofx-tab'));
          return;
        }

        e.preventDefault();
        const clamp = (idx) => tabs[Math.max(0, Math.min(tabs.length - 1, idx))];

        if (k === 'Home') return clamp(0).focus();
        if (k === 'End') return clamp(tabs.length - 1).focus();

        const dir = k === 'ArrowDown' || k === 'ArrowRight' ? 1 : -1;
        clamp(i + dir).focus();
      });

      const initial =
        tabs.find((t) => t.classList.contains('is-active'))?.getAttribute('data-proofx-tab') || 'doc';
      setActive(initial);
    }
  </script>
</section>
