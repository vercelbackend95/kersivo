---
import ProcessIgnite from "./islands/ProcessIgnite";
import "./process.css";

// ✅ SEO: na landing = h2, na /process = h1
const { asPage = false } = Astro.props;
const TitleTag = asPage ? "h1" : "h2";

// stabilne id (żeby aria-labelledby było poprawne)
const titleId = asPage ? "process-page-title" : "process-title";
---

<section id="process" class="section k-processPill" aria-labelledby={titleId}>
  <div class="container">
    <header class="k-sectionHead">
      <div class="k-sectionHead__kicker">PROCESS</div>

      <TitleTag class="k-sectionHead__title" id={titleId}>
        A premium flow.
        <span class="k-sectionHead__grad">Without the noise.</span>
      </TitleTag>

      <p class="k-sectionHead__lead">
        Five calm checkpoints. Each one removes doubt — and nudges conversions forward.
      </p>
    </header>

    <ProcessIgnite client:load />
  </div>
</section>
