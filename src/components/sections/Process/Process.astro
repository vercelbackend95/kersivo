---
import "./process.css";
import ProcessScroll from "./islands/ProcessScroll";
import CtaButton from "../../ui/CtaButton/CtaButton.astro";
---

<section id="process" class="k-process" aria-label="Process">
  <div class="container k-process__container">
    <header class="k-process__head">
      <div class="k-process__micro">PROCESS</div>
      <h2 class="k-process__title">Process</h2>
      <p class="k-process__lead">
        A clean flow that ships. Clear steps, clean scope, and a calm launch.
      </p>
    </header>

   <ProcessScroll client:load />


    <div class="k-process__lock" aria-label="Next step">
      <p class="k-process__lockText">Ready to map your build?</p>

      <div class="k-process__lockCtas">
        <CtaButton href="#contact" label="Get a quote" variant="ghost" magnetic={false} />
        <a class="k-process__lockLink" href="#work">See work</a>
      </div>
    </div>
  </div>
</section>
