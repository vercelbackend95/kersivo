---
import "./work.css";
import WorkShowcase from "./islands/WorkShowcase";

const { asPage = false } = Astro.props;

// h2 na landing, h1 na /work
const TitleTag = asPage ? "h1" : "h2";
const titleId = asPage ? "work-page-title" : "work-title";
---

<section id="work" class="k-work section" aria-labelledby={titleId}>
  <div class="container">
    <header class="k-workHead">
      <div class="k-workHead__kicker">WORK</div>

      <TitleTag class="k-workHead__title" id={titleId}>
        One live demo.
        <span class="k-workHead__grad">Real build quality.</span>
      </TitleTag>

      <p class="k-workHead__lead">
        A live demo you can actually click. Clean system + tailored skin â€” shipped fast.
      </p>
    </header>

    <WorkShowcase client:visible />
  </div>
</section>
