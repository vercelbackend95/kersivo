---
import "./work.css";
import CtaButton from "../../ui/CtaButton/CtaButton.astro";

export interface Props {
  demoUrl?: string;
}

const {
  demoUrl = "https://bourneweb-demos.vercel.app/projects/local-barber-neo-gentleman-site",
} = Astro.props;
---

<section id="work" class="k-work section" aria-label="Work">
  <div class="container">
    <header class="k-work__head">
      <div class="k-work__kickerRow">
        <span class="k-work__kicker">WORK</span>
        <span class="k-work__badge">DEMO-SAFE</span>
      </div>

      <h2 class="k-work__title">
        One demo. <span class="k-work__grad">Real craft.</span>
        <br />
        Built as a repeatable system.
      </h2>

      <p class="k-work__lead">
        We don’t flex imaginary case studies. We show you the build quality — fast, clean,
        conversion-first — and scale it into your industry.
      </p>
    </header>

    <div class="k-work__grid">
      <!-- LIVE DEMO -->
      <article class="k-workCard k-workCard--live">
        <div class="k-workCard__top">
          <div class="k-workCard__titleRow">
            <h3 class="k-workCard__title">Neo Gentleman — Barber Demo</h3>
            <span class="k-workCard__pill">LIVE</span>
          </div>

          <p class="k-workCard__desc">
            Premium dark vibe, strong typography, and “book now” conversion flow. No backend —
            pure front-end craft.
          </p>
        </div>

        <a class="k-workCard__preview" href={demoUrl} target="_blank" rel="noopener noreferrer" aria-label="Open live demo">
          <div class="k-workCard__previewInner">
            <div class="k-workCard__previewKicker">KERSIVO DEMO</div>
            <div class="k-workCard__previewName">Barber • Neo Gentleman</div>
            <div class="k-workCard__previewMeta">Fast. Clean. App-like.</div>
            <span class="k-workCard__shine" aria-hidden="true"></span>
          </div>
        </a>

        <div class="k-workCard__proof">
          <div class="k-workCard__proofItem">
            <span class="k-workCard__dot" aria-hidden="true"></span>
            Performance-first
          </div>
          <div class="k-workCard__proofItem">
            <span class="k-workCard__dot" aria-hidden="true"></span>
            SEO foundations
          </div>
          <div class="k-workCard__proofItem">
            <span class="k-workCard__dot" aria-hidden="true"></span>
            Conversion flow
          </div>
        </div>

        <div class="k-workCard__actions">
          <CtaButton href={demoUrl} label="View live demo" variant="primary" class="k-workCard__cta" />
          <CtaButton href="#contact" label="Get a quote" variant="ghost" magnetic={false} class="k-workCard__ghost" />
        </div>
      </article>

      <!-- IN PRODUCTION #1 -->
      <article class="k-workCard k-workCard--ghost">
        <div class="k-workCard__top">
          <div class="k-workCard__titleRow">
            <h3 class="k-workCard__title">Clinic Intake + Booking</h3>
            <span class="k-workCard__pill k-workCard__pill--ghost">IN PRODUCTION</span>
          </div>

          <p class="k-workCard__desc">
            Same system, different skin. Intake-first flows, trust stack, and local SEO framing.
          </p>
        </div>

        <div class="k-workCard__preview k-workCard__preview--ghost" aria-hidden="true">
          <div class="k-workCard__previewInner k-workCard__previewInner--ghost">
            <div class="k-workCard__previewKicker">NEXT</div>
            <div class="k-workCard__previewName">Clinic • Intake</div>
            <div class="k-workCard__previewMeta">Shipping soon.</div>
          </div>
        </div>

        <div class="k-workCard__actions">
          <CtaButton href="/?intent=clinic#contact" label="Notify me" variant="ghost" magnetic={false} class="k-workCard__ghost" />
          <CtaButton href="#contact" label="Get a quote" variant="primary" class="k-workCard__cta" />
        </div>
      </article>

      <!-- IN PRODUCTION #2 -->
      <article class="k-workCard k-workCard--ghost">
        <div class="k-workCard__top">
          <div class="k-workCard__titleRow">
            <h3 class="k-workCard__title">Electrician — Local Lead Gen</h3>
            <span class="k-workCard__pill k-workCard__pill--ghost">IN PRODUCTION</span>
          </div>

          <p class="k-workCard__desc">
            Service pages, local proof, and call-first UX. Built for small UK trades.
          </p>
        </div>

        <div class="k-workCard__preview k-workCard__preview--ghost" aria-hidden="true">
          <div class="k-workCard__previewInner k-workCard__previewInner--ghost">
            <div class="k-workCard__previewKicker">NEXT</div>
            <div class="k-workCard__previewName">Electrician • Leads</div>
            <div class="k-workCard__previewMeta">Shipping soon.</div>
          </div>
        </div>

        <div class="k-workCard__actions">
          <CtaButton href="/?intent=trades#contact" label="Notify me" variant="ghost" magnetic={false} class="k-workCard__ghost" />
          <CtaButton href="#contact" label="Get a quote" variant="primary" class="k-workCard__cta" />
        </div>
      </article>
    </div>
  </div>
</section>
