---
import "./packages.css";
import PackagesTable from "./islands/PackagesTable";

// ✅ SEO: na landing = h2, na /packages = h1
const { asPage = false } = Astro.props;
const TitleTag = asPage ? "h1" : "h2";
const titleId = asPage ? "packages-page-title" : "packages-title";
---

<section id="packages" class="section k-packages" aria-labelledby={titleId} data-packages>
  <div class="container">
    <header class="k-pack__head">
      <div class="k-pack__kicker">PACKAGES</div>

      <TitleTag class="k-pack__title" id={titleId}>
        Best value pricing for UK small businesses.
        <span class="k-pack__grad">Built to convert.</span>
      </TitleTag>

      <p class="k-pack__lead">
        Clear scope, clean build, and a site that’s ready to earn — without fluffy promises.
      </p>
    </header>

    <PackagesTable client:visible />
  </div>
</section>
