---
import "./packages.css";
import ModePills from "./islands/ModePills";
import PackagesTable from "./islands/PackagesTable";
---

<section id="services" class="k-pack section" aria-label="Packages">
  <div class="container">
    <header class="k-pack__head">
      <div class="k-pack__kicker">PACKAGES</div>

      <h2 class="k-pack__title">
        Best value pricing for UK small businesses.
        <span class="k-pack__grad">Built to convert.</span>
      </h2>

      <p class="k-pack__lead">
        Premium design, ruthless performance, and clear messaging — built for UK small businesses.
      </p>

      <div class="k-pack__tabs">
        <ModePills client:visible />
      </div>
    </header>

    <PackagesTable client:visible />

    <!-- Ghost link moved OUTSIDE island -->
    <div class="k-pack__below">
      <a class="k-packGhost" href="#contact">
        See more details <span aria-hidden="true">↓</span>
      </a>
    </div>
  </div>
</section>
