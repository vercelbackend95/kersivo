---
import "./tech-stripe.css";

/**
 * Put your SVGs here:
 * src/components/sections/TechStripe/icons/*.svg
 *
 * We import as raw strings so we can inline them (fast + crisp).
 */
import astroSvg from "./icons/astro.svg?raw";
import reactSvg from "./icons/react.svg?raw";
import tsSvg from "./icons/typescript.svg?raw";
import jsSvg from "./icons/javascript.svg?raw";
import htmlSvg from "./icons/html5.svg?raw";
import cssSvg from "./icons/css.svg?raw";
import framerSvg from "./icons/framer.svg?raw";
import npmSvg from "./icons/npm.svg?raw";
import vercelSvg from "./icons/vercel.svg?raw";
import cloudflareSvg from "./icons/cloudflare.svg?raw";

const tech = [
  { name: "Astro", svg: astroSvg },
  { name: "React", svg: reactSvg },
  { name: "TypeScript", svg: tsSvg },
  { name: "JavaScript", svg: jsSvg },
  { name: "HTML5", svg: htmlSvg },
  { name: "CSS", svg: cssSvg },
  { name: "Framer", svg: framerSvg },
  { name: "npm", svg: npmSvg },
  { name: "Vercel", svg: vercelSvg },
  { name: "Cloudflare", svg: cloudflareSvg },
];
---

<section class="k-techStripe" aria-label="Technologies we use">
  <div class="k-techStripe__frame" role="region" aria-label="Tech marquee">
    <p class="k-techStripe__sr">
      Our tech stack: {tech.map((t) => t.name).join(", ")}.
    </p>

    <div class="k-techStripe__mask">
      <div class="k-techStripe__track" style="--duration: 36s">
        <ul class="k-techStripe__row" role="list">
          {tech.map((t) => (
            <li class="k-techStripe__item" data-tech={t.name.toLowerCase()}>
              <span class="k-techStripe__icon" set:html={t.svg} />
              <span class="k-techStripe__word">{t.name}</span>
            </li>
          ))}
        </ul>

        {/* duplicate for seamless loop */}
        <ul class="k-techStripe__row" role="list" aria-hidden="true">
          {tech.map((t) => (
            <li class="k-techStripe__item" data-tech={t.name.toLowerCase()}>
              <span class="k-techStripe__icon" set:html={t.svg} />
              <span class="k-techStripe__word">{t.name}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
